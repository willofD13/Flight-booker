<h1> Flights </h1>
<% @flights.each do |f|%>
<ul>
    <li><%= f.start_datetime %></li>
    <li><%= f.duration %></li>
    <li><%= f.departure_airport.code %></li>
    <li><%= f.arrival_airport.code %></li>
</ul>
<% end %>

<%= form_with url: "/flights", method: :get do |f|%>
    <%= f.select :departure_airport_id, @airport_options %>
    <%= f.select :arrival_airport_id, @airport_options %>
    <%= f.select :number_of_passengers, @number_options %>
    <%= f.select :start_datetime, @date_options %>
    <%= f.submit "Search" %>
<% end %>
